<h1>ユーザー一覧</h1>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>ユーザーネーム</th>
      <th></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
    <tbody>
      <tr>
        <th class="user-image">
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image(100,100) %>
          <% end %>
        </th>
        <th class="user-name">
          <%= link_to user_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </th>
        <th></th>
      </tr>
    </tbody>
  <% end %>
</table>
<div>
  <%= paginate @post_images %>
</div>

  
